# CSA Development Environment Configuration

# Application settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# AWS Configuration (LocalStack for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# Cognito Configuration (set by LocalStack init)
COGNITO_USER_POOL_ID=us-east-1_test123
COGNITO_CLIENT_ID=test123456789
COGNITO_REGION=us-east-1

# Database Configuration
DYNAMODB_ENDPOINT=http://localhost:4566
S3_ENDPOINT=http://localhost:4566

# Alternative: PostgreSQL for local development
# DATABASE_URL=postgresql://csa_user:csa_password@localhost:5432/csa_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_BASE_PATH=/api

# Capture Engine Configuration
CAPTURE_TIMEOUT=60
CAPTURE_MEMORY_LIMIT=2048
BROWSER_HEADLESS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=120

# Security
JWT_SECRET_KEY=development-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Storage Configuration
S3_BUCKET_ARTIFACTS=csa-artifacts-local
CLOUDTRAIL_BUCKET=csa-cloudtrail-local
DDB_TABLE_SCHEDULES=csa-schedules
DDB_TABLE_CAPTURES=csa-captures
PRESIGN_TTL_SECONDS=900  # 15 minutes

# Monitoring (optional for development)
ENABLE_METRICS=false
ENABLE_TRACING=false

# Testing
TEST_USER_EMAIL=admin@test.com
TEST_USER_PASSWORD=AdminPass123!

# Development Only
PYTHONPATH=.